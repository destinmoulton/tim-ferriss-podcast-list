{% include "./header.njk" %}

<div class="panel">
    <h3>A List of Tim Ferriss Podcasts</h3>
    <p>This content was gathered from the RSS feed for <a href="https://tim.blog/podcast/">Tim Ferriss' Podcasts</a>.</p>
</div>
<div>
{% for item in items %}
<div class="row">
    <div class="col-sm-12">
        <div>
            {% if (item.episodeNumber > 0) %}
                {{ item.episodeNumber }}.
            {% endif %}
            <a  href="{{ item.downloadURL }}" 
                download="{{ item.downloadFilename }}"
                target="_blank">
                <i class="glyphicon glyphicon-save"></i>
            </a>
            <a href="javascript:void(0)" 
               onclick="showInfoModal({{ loop.index }})"
               id="tfl-item-title-{{ loop.index }}">{{ item.title }}</a>
            <div style="display:none;" id="tfl-item-description-{{ loop.index }}">{{ item.description | safe }}</div>
            <div style="display:none;" id="tfl-item-download-url-{{ loop.index }}">{{ item.downloadURL }}</div>
            <div style="display:none;" id="tfl-item-download-filename-{{ loop.index }}">{{ item.downloadFilename }}</div>
        </div>
    </div>
</div>
{% endfor %}
</div>
{% include "./modal.njk" %}
{% include "./footer.njk" %}